<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/m_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a alihotfix test!" />

    <Button
        android:id="@+id/m_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="mButtonClicked"
        android:text="热补丁修复测试" />

    <Button
        android:id="@+id/m_button_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="mButtonClicked2"
        android:text="热补丁修复测试2" />

</LinearLayout>
